    "@types/mocha": "^2.2.44",
    "@types/moment-timezone": "^0.5.3",
    "@types/sails.io.js": "^1.0.1",
    "@types/shortid": "0.0.29",
    "@types/socket.io-client": "^1.4.32",
    "@types/xml2js": "^0.4.2",
    "app-root-path": "^2.0.1",
