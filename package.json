{
  "name": "danmakucraft2",
  "version": "1.0.0",
  "description": "",
  "main": "dist/bundle.js",
  "scripts": {
    "preinstall": "rm -rf node_modules/",
    "postinstall": "npm run server:link",
    "prepublishOnly": "npm test && npm run client:build:prod && cp build/bundle.js dist/",
    "clean": "npm run client:clean",
    "test": "npm run client:test",
    "client:build:dev": "webpack --watch --config client/webpack.dev.js",
    "client:build:dev:local": "rm -rf build/dev/* && LOCAL_SERVER=true webpack --watch --config client/webpack.dev.js",
    "client:build:prod": "webpack --watch --config client/webpack.prod.js",
    "client:build:analyze": "webpack --config client/webpack.prod.js --json >> build/bundle.json",
    "client:clean": "rm -rf dist build",
    "client:test": "mocha --watch test/client/**/*.ts",
    "server:debug": "node debug server/app.js",
    "server:start:dev": "sudo node server/app.js",
    "server:start:prod": "sudo node server/app.js --prod",
    "server:link": "cd server; ln -s ../node_modules node_modules; ln -s ../package.json package.json; cd assets/static/; ln -s ../../../build/dev dev; ln -s ../../../build/prod prod; cd ../../..",
    "server:unlink": "rm -f server/node_modules server/package.json server/assets/static/*",
    "db:terminal": "sudo su postgres -c 'psql -d danmakucraft_2'",
    "db:terminal:dev": "sudo su postgres -c 'psql -d danmakucraft_2_dev'",
    "script:db:populate": "ts-node scripts/populateDatabase.ts data/comments/all.xml > build/comments.sql",
    "script:db:populate:partial": "ts-node scripts/populateDatabase.ts data/comments/all.xml 16000 > build/comments.partial.sql",
    "script:audio:build": "node node_modules/audiosprite/cli.js -b 192 -v 6 -o server/assets/audio/background_sprite -u audio data/audio/background/* && mv server/assets/audio/background_sprite.json data/audio/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yehzhang/DanmakuCraft2.git"
  },
  "author": "Simon Zhang <simonzhangintp@gmail.com>",
  "license": "AGPL-3.0+",
  "bugs": {
    "url": "https://github.com/yehzhang/DanmakuCraft2/issues"
  },
  "homepage": "https://github.com/yehzhang/DanmakuCraft2#readme",
